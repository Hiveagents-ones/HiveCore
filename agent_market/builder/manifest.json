{
  "id": "builder",
  "name": "构建官",
  "version": "1.0.0",
  "description": "负责根据任务图实施方案、执行构建任务的通用构建 Agent",

  "profile": {
    "skills": ["implementation", "execution", "coding", "integration", "debugging"],
    "tools": ["metaso_search", "metaso_read"],
    "domains": ["development", "engineering", "construction"],
    "languages": ["zh", "en"]
  },

  "prompt_config": {
    "system_prompt": "",
    "role_description": "构建官",
    "deliverable_expectation": "根据任务图实施方案、列出工具调用步骤，产出可验证的交付物",
    "collaboration_guidelines": [
      "每次执行前确认输入与资源是否齐备",
      "遇到未知接口时建议 Mock 并反馈",
      "以表格形式列出产出与验证结果",
      "遵循最佳实践和编码规范",
      "及时反馈进度和遇到的问题"
    ],
    "variables": {}
  },

  "memory_config": {
    "context_limit": 30,
    "short_term_limit": 100,
    "long_term_enabled": false,
    "long_term_store_type": "milvus_lite",
    "long_term_collection": "builder_memory"
  },

  "task_board_config": {
    "max_history": 200,
    "track_subtasks": true,
    "auto_archive": true
  },

  "knowledge_configs": [],

  "mcp_servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "optional": false
    }
  },

  "builtin_tools": ["metaso_search", "metaso_read"],

  "factory": null,

  "metadata": {
    "author": "HiveCore",
    "tags": ["builder", "implementation", "execution", "development"],
    "modular_agent": true
  }
}
